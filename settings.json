{
    // General settings
    "security.workspace.trust.untrustedFiles": "open",

    // Display settings
    "editor.tabSize": 2,
    "editor.fontSize": 14,
    "editor.stickyScroll.enabled": false,
    "window.customTitleBarVisibility": "windowed",
    "window.menuBarVisibility": "compact",
    "workbench.colorTheme": "Solarized Light",
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.showTabs": "none",

    // Terminal settings
    "terminal.integrated.allowChords": false,
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.env.windows": {
        "EDITOR": "windsurf"
    },
    "workbench.panel.opensMaximized": "always",

    // Extension settings
    "find-it-faster.general.restoreFocusTerminal": true,
    "go.toolsManagement.autoUpdate": true,
    "redhat.telemetry.enabled": false,
    "windsurf.autocompleteSpeed": "default",
    "windsurf.autoExecutionPolicy": "off",
    "windsurf.chatFontSize": "default",
    "windsurf.explainAndFixInCurrentConversation": true,
    "windsurf.openRecentConversation": true,
    "windsurf.rememberLastModelSelection": true,

    // Vim settings
    "vim.easymotion": true,
    "vim.gdefault": true,
    "vim.highlightedyank.color": "#a9dc7660",
    "vim.highlightedyank.duration": 200,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.showMarksInGutter": true,
    "vim.timeout": 200,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [ "j", "k" ],
            "after": [ "<Esc>" ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [ "g", "d" ],
            "commands": [ "editor.action.revealDefinition" ]
        },
        {
            "before": [ "g", "t" ],
            "commands": [ "editor.action.goToTypeDefinition" ]
        },
        {
            "before": [ "g", "i" ],
            "commands": [ "editor.action.goToImplementation" ]
        },
        {
            "before": [ "g", "r" ],
            "commands": [ "editor.action.referenceSearch.trigger" ]
        },
        {
            "before": [ "K" ],
            "commands": [ "editor.action.showHover" ]
        },
        {
            "before": ["<leader>", "q"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.files.save"]
        },
        {
             "before": ["<leader>", "b"],
             "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
             "before": ["<leader>", "z"],
             "commands": ["workbench.action.toggleZenMode"]
        },
        {
            "before": ["<leader>", "k"],
            "commands": ["workbench.action.openGlobalKeybindings"]
        },
        {
             "before": ["[", "["],
             "commands": ["editor.action.marker.prevInFiles"]
        },
        {
             "before": ["]", "]"],
             "commands": ["editor.action.marker.nextInFiles"]
        },
    ],
}