{
    // General settings
    "security.workspace.trust.untrustedFiles": "open",
    "remote.autoForwardPortsSource": "hybrid",

    // Display settings
    "editor.tabSize": 2,
    "editor.fontSize": 14,
    "editor.stickyScroll.enabled": false,
    "editor.fontLigatures": true,
    "editor.fontFamily": "JetBrainsMono Nerd Font Regular",
    "window.customTitleBarVisibility": "windowed",
    "window.menuBarVisibility": "compact",
    "workbench.panel.opensMaximized": "always",
    "workbench.colorTheme": "Default Light Modern",
    "workbench.editor.editorActionsLocation": "hidden",
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.showTabs": "none",
    "zenMode.centerLayout":false,

    // Terminal settings
    "terminal.integrated.allowChords": false,
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.defaultProfile.linux": "tmux",
    "terminal.integrated.env.windows": {
        "EDITOR": "windsurf"
    },

    // Extension settings
    "go.toolsManagement.autoUpdate": true,
    "redhat.telemetry.enabled": false,

    // Vim settings
    "vim.easymotion": true,
    "vim.gdefault": true,
    "vim.highlightedyank.color": "#a9dc7660",
    "vim.highlightedyank.duration": 200,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.showMarksInGutter": true,
    "vim.timeout": 200,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [ "j", "k" ],
            "after": [ "<Esc>" ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [ "<leader>", "c" ],
            "commands": [ "workbench.action.openGlobalKeybindingsFile" ]
        },
        {
            "before": ["<leader>", "k"],
            "commands": ["workbench.action.openGlobalKeybindings"]
        },
        {
            "before": ["<leader>", "s"],
            "commands": ["workbench.action.openSettingsJson"]
        },
        {
            "before": [ "K" ],
            "commands": [ "editor.action.showHover" ]
        },
        {
            "before": [ "g", "d" ],
            "commands": [ "editor.action.revealDefinition" ]
        },
        {
            "before": [ "g", "t" ],
            "commands": [ "editor.action.goToTypeDefinition" ]
        },
        {
            "before": [ "g", "i" ],
            "commands": [ "editor.action.goToImplementation" ]
        },
        {
            "before": [ "g", "r" ],
            "commands": [ "editor.action.referenceSearch.trigger" ]
        },
        {
            "before": ["[", "["],
            "commands": ["editor.action.marker.prevInFiles"]
        },
        {
            "before": ["]", "]"],
            "commands": ["editor.action.marker.nextInFiles"]
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["workbench.action.files.openFolder"]
        },
        {
            "before": ["<leader>", "o"],
            "commands": ["workbench.action.closeEditorsInOtherGroups"]
        },
        {
            "before": ["<leader>", "q"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.files.save"]
        },
        {
             "before": ["<leader>", "b"],
             "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
             "before": ["<leader>", "z"],
             "commands": ["workbench.action.toggleZenMode"]
        },
    ],
}